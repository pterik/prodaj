{
    "name": "madhouse/emailmagick",
    "description": "Design & manage emails for Osclass, powered by Madhouse.",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "MADHOUSE",
            "email": "contact.wearemadhouse@gmail.com"
        }
